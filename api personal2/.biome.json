{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",

  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "logs",
      ".cache",
      "coverage",
      "docs/openapi.generated.yaml",
      "src/routes/auto/auto.manifest.ts"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error"
      },

      "suspicious": {
        "noExplicitAny": "warn"
      },

      "complexity": {
        "noExtraBooleanCast": "error"
      }
    }
  }
}
